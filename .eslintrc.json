{
  "env": {
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "extends": ["react-app"],
  "rules": {
    "no-var": "error",
    "eol-last": "error",
    "no-console": "error",
    "no-unreachable": "error",
    "no-trailing-spaces": "error",
    "no-unexpected-multiline": "error",
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "eqeqeq": ["error", "always"],
    "arrow-spacing": ["error", {
      "before": true,
      "after": true
    }],
    "prefer-const": ["error", {
      "destructuring": "any",
      "ignoreReadBeforeAssign": false
    }],
    "indent": ["error", 2, {
      "SwitchCase": 1,
      "ObjectExpression": 1
    }],
    "no-multiple-empty-lines": ["error", {
      "max": 1,
      "maxEOF": 0,
      "maxBOF": 0
    }]
  }
}
